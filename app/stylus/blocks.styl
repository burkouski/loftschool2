@import '/mixins/mixins'
@import '/mixins/sprite'


/*блок b-header*/
.b-header
  clearfix()
  background #ebf1f7
.b-header__item_1
  padding 24px 0 0 0
.b-header__item_2
  padding 22px 0 0 0

/*блок b-contacts*/
.b-contacts__phone
  color #00b9fe
  font-family 'elektra_m'
  font-size 16px
  font-weight bold
  text-decoration none
.b-contacts__phone_big
  vertical-align top
  color #5c7b98
  font-weight normal
  font-size 25px
.b-contacts__mail
  color #613993
  font-family 'elektra_l'
  font-size 17px
  &:hover
  &:active
    text-decoration none

/*блок b-mainnav*/
.b-mainnav__list
  margin -20px 13px 0 0
  padding 0 0 0 13px
  border-bottom 1px solid #e3e3e3
  font-size 0
.b-mainnav__item
  display inline-block
  &:first-child
    .b-mainnav__link
      padding 0 8px 0 10px
.b-mainnav__link
  position relative
  display block
  padding 0 8px 0 30px
  background #f7f7f7
  color #5c7b98
  font-family 'elektra_l'
  font-size 15px
  line-height 40px
  text-decoration none
  &:before
  &:after
    content ''
    position absolute
    top 0
    display block
    width 15px
    height 40px
  &:after
    z-index 2
    right -15px
    spriteImage($g-arr1)
    sprite($g-arr2)
.b-mainnav__item
  &:hover
    >.b-mainnav__link
      background #dce6f0
      &:after
        sprite($g-arr4)
  &.active
    .b-mainnav__link
      background #00b9fe
      color white
      &:after
        sprite($g-arr3)
  &:first-child
    .b-mainnav__link
      &:before
        left -15px
        spriteImage($g-arr1)
        sprite($g-arr1)
      &:hover
        &:before
          sprite($g-arr1h)
      &:active
        &:before
          sprite($g-arr1a)
/*блок b-page*/

.b-page
  clearfix()
  padding 14px 0 79px 0
.b-page__sidebar
.b-page__content
  float left
.b-page__sidebar
  width 230px
  margin 0 30px 0 0
.b-page__content
  width 740px


/*блок b-page-ctrl*/

.b-catalog-nav__item
  background #f7f7f7
  &:hover
    >.b-catalog-nav__link
      background #dce6f0
      border-top 1px solid #dce6f0
      color #5c7b98
  &.active
    >.b-catalog-nav__link
      background #00b9fe
      border-top 1px solid #00b9fe
      color #ffffff
.b-catalog-nav__link
  display block
  padding 8px 19px
  background #f7f7f7
  border-top 1px solid #dae1eb
  color #5c7b98
  font-size 15px
  text-decoration none
.b-catalog-nav__link_sub
  &:before
    content ">"
    display inline-block
    margin 0 5px 0 0
    font-weight bold


/*блок b-page-ctrl*/

.b-page-ctrl
  clearfix()
  padding 17px 0
.b-page-ctrl__item_3
  margin 0 30px

/*блок b-breadcrumbs*/
.b-breadcrumbs__list
  font-size 0
.b-breadcrumbs__item
  display inline-block
  margin 0 3px 0 0
  color #5c7b98
  font-size 14px
.b-breadcrumbs__link
  color #00b9fe
  text-decoration underline
  &:hover
    text-decoration none

.b-toogle-class__item
  width 134px
  height 26px
  padding 0 32px 0 6px
  color #5c7b98
  font-size 14px
  line-height 26px
  &.active
    color #bed1e3
.b-toogle-class__item_brd
  position relative
  border 1px solid #dae1eb
  &:after
    content ''
    position absolute
    top 0
    right 0
    display block
    spriteImage($g-arrd)
    sprite($g-arrd)

.b-toogle-class__sublist
  display none
  position relative
  z-index 2
  left -7px
  width 134px
  background white
  border-right 1px solid #dae1eb
  border-bottom 1px solid #dae1eb
  border-left 1px solid #dae1eb

.b-pagination__list
  font-size 0
.b-pagination__item
  display inline-block
  margin 0 0 0 7px
  font-size 15px
  &.active
    .b-pagination__link
      color #5c7b98
.b-pagination__link
  color #00b9fe
  text-decoration underline
  &:hover
    text-decoration none
  &.active
    color #5c7b98
    
.b-footer
  background url("../img/bg/footer-bg.png")
  font-size 0
.b-footer__item
  display inline-block
  vertical-align top
.b-footer__item_1
  margin 0 30px 0 0
  padding 97px 0 0 0
  width 230px
.b-footer__item_2
.b-footer__item_3
.b-footer__item_4
  width 160px
  padding 60px 10px 0 0
.b-footer__item_5
  width 260px
  padding 70px 0 0 0
/*блок b-nav */

.b-nav
  font-size 15px
.b-nav__title
  margin 0 0 12px 0
  color #ffffff
  font-weight bold
.b-nav__item
  margin 9px 0 0 0
  &:first-child
    margin 0
.b-nav__link
  color white
  text-decoration underline
  &:hover
    text-decoration none


/*блок b-store */
.b-store
  text-align right
.b-store__link
  display inline-block
  margin 0 0 0 5px
.b-social__list
  padding  25px 43px 0 0
  word-spacing 11px
  text-align right
.b-social__item
  display inline-block



/*блок b-product */
.b-catalog__wrap
  margin 0 0 0 -25px
  font-size 0
.b-product
  display inline-block
  width 100%
  vertical-align top
  margin 0 0 20px 25px
  border 1px solid #dbe1eb
  font-size 0
.b-product__img-wrap
.b-product__wrap
  display inline-block
  vertical-align top
.b-product__img-wrap
  width 100%
  max-width 193px
  height 158px
  padding 15px 25px
  text-align center
.b-product__wrap
  padding 30px 0
  width 100%
  max-width 545px
  font-size 15px
.b-product__title
  margin  0 0 20px 0
  font-weight normal
.b-product__desc
  color #5c7b98
  font-size 14px
  word-spacing 3px
.b-product__link
  display inline-block
  vertical-align: middle;
  color #00b9fe
  text-decoration underline
  &:hover
    text-decoration none
.b-product__helper
  display inline-block
  height 100%
  vertical-align: middle
.b-product__option
  display inline-block
  margin 0 3px 0 0
.b-product_grid
  max-width 230px
  padding 14px
  .b-product__wrap
    padding 0
  .b-product__option
    margin 7px 0 0 0
  &:first-child
    margin 0
  .b-product__option_name
    display inline-block
    width 90px
    padding 0 5px 0 0