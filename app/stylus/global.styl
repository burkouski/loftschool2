@import '/mixins/mixins'
@import '/mixins/sprite'

/*Переменные настройки*/
headerHeight = 120px
footerHeight = 238px
placeholderColor = #000
containerWidth = 1000px

@font-face {
  font-family: 'elektra_l';
  src: url('../fonts/elektra_light_pro-webfont.eot');
  src: url('../fonts/elektra_light_pro-webfont.eot?#iefix') format('embedded-opentype'),
  url('../fonts/elektra_light_pro-webfont.woff2') format('woff2'),
  url('../fonts/elektra_light_pro-webfont.woff') format('woff'),
  url('../fonts/elektra_light_pro-webfont.ttf') format('truetype'),
  url('../fonts/elektra_light_pro-webfont.svg#elektra_light_proregular') format('svg');
  font-weight: normal;
  font-style: normal;

}

@font-face {
  font-family: 'elektra_mi';
  src: url('../fonts/elektra_medium_pro_italic-webfont.eot');
  src: url('../fonts/elektra_medium_pro_italic-webfont.eot?#iefix') format('embedded-opentype'),
  url('../fonts/elektra_medium_pro_italic-webfont.woff2') format('woff2'),
  url('../fonts/elektra_medium_pro_italic-webfont.woff') format('woff'),
  url('../fonts/elektra_medium_pro_italic-webfont.ttf') format('truetype'),
  url('../fonts/elektra_medium_pro_italic-webfont.svg#elektra_medium_proitalic') format('svg');
  font-weight: normal;
  font-style: normal;

}

@font-face {
  font-family: 'elektra_m';
  src: url('../fonts/elektra_medium_pro-webfont.eot');
  src: url('../fonts/elektra_medium_pro-webfont.eot?#iefix') format('embedded-opentype'),
  url('../fonts/elektra_medium_pro-webfont.woff2') format('woff2'),
  url('../fonts/elektra_medium_pro-webfont.woff') format('woff'),
  url('../fonts/elektra_medium_pro-webfont.ttf') format('truetype'),
  url('../fonts/elektra_medium_pro-webfont.svg#elektra_medium_proregular') format('svg');
  font-weight: normal;
  font-style: normal;
}
*
  box-sizing border-box
  inline-box-align align-content

/*Стилизация placeholder*/
input
  placeholder(#ffffff)

/*сброс стилей для списков*/
.g-unstyled
  margin 0
  padding 0
  list-style none

/*Скрытие текста*/
.g-hide-text
  text-hide()

/*иконки*/
.g-icon
  display block
  background url("../img/bg/sprite.png") no-repeat

.g-fleft
  float left
.g-fright
  float right
/*Футер к низу страницы*/
.b-html
.b-body
  height 100%
.b-body
  font normal 16px 'elektra_l'
.g-wrapper
  min-height: 100%
  height auto !important
  height 100%
  margin 0 auto - footerHeight
.g-footer-push
  height footerHeight
.b-footer
  height footerHeight
.b-header
  height headerHeight
.g-container
  width containerWidth
  margin 0 auto